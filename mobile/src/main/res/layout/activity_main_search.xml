<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00023E"
    tools:context=".MainActivityHomeScr">

    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="121dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/proseektxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/proseektext" />


    </LinearLayout>

    <ImageView
        android:id="@+id/servicetxt"
        android:layout_width="105dp"
        android:layout_height="59dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:layout_marginRight="167dp"
        android:scaleType="centerInside"
        android:src="@drawable/servicestext" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upperfunction"
        android:layout_below="@+id/logo_section"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_2_bg"
            android:drawablePadding="20dp"
            android:hint="search"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="text"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/message1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:id="@+id/urprofile"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/profileremovebg" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upperfunction"
        android:layout_marginTop="8dp">

        <LinearLayout
